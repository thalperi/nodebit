{
  "name": "nodebit",
  "version": "1.0.0",
  "description": "Unified IPFS & OrbitDB for Node-RED - Decentralized storage made simple",
  "keywords": [
    "node-red",
    "ipfs",
    "orbitdb",
    "decentralized",
    "storage",
    "files",
    "database",
    "p2p",
    "helia",
    "distributed"
  ],
  "author": "Nodebit Team",
  "license": "MIT",
  "homepage": "https://github.com/nodebit/nodebit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodebit/nodebit.git"
  },
  "bugs": {
    "url": "https://github.com/nodebit/nodebit/issues"
  },
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@chainsafe/libp2p-noise": "^16.1.3",
    "@chainsafe/libp2p-yamux": "^7.0.4",
    "@helia/http": "^1.0.0",
    "@helia/unixfs": "^5.0.3",
    "@libp2p/autonat": "^2.0.37",
    "@libp2p/circuit-relay-v2": "^3.2.20",
    "@libp2p/dcutr": "^2.0.37",
    "@libp2p/identify": "^3.0.33",
    "@libp2p/tcp": "^10.1.18",
    "@libp2p/websockets": "^9.2.8",
    "@orbitdb/core": "^3.0.2",
    "blockstore-fs": "^2.0.4",
    "datastore-fs": "^10.0.4",
    "helia": "^5.4.2",
    "ipfs-http-client": "^60.0.0",
    "joi": "^17.9.2",
    "libp2p": "^2.8.9",
    "mime-types": "^2.1.35",
    "multiformats": "^13.3.7",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.5.0",
    "node-red-node-test-helper": "^0.3.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:e2e": "jest --testPathPattern=test/e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "dev": "node-red -s settings-dev.js",
    "build:docs": "node scripts/build-docs.js"
  },
  "node-red": {
    "version": ">=3.0.0",
    "nodes": {
      "nb-workspace": "nodes/workspace/workspace.js",
      "nb-file": "nodes/file/file.js",
      "nb-database": "nodes/database/database.js"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "nodes/**/*.js",
      "lib/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
